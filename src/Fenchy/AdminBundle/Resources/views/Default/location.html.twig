{% extends 'FenchyAdminBundle::layout.html.twig' %}
{% form_theme filter '::filterForm.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $().ready(function () {
            $('.location-status').click(function() {
                var id = $(this).attr('rel');
                var status = $('td.location-status[rel="'+id+'"]').text();               
                $.ajax({
                    type:     'POST',
                    dataType: 'json',
                    data:     { 'id' : id, 
                        		'status': status},
                    url: "{{ path('fenchy_admin_location_switch') }}",
                    success: function (result) {
                        if (result !== false) {
                            if (result.status === 'Verified') {
                                $('td.location-status[rel="'+result.id+'"]').text('Verified');
                            } else if (result.status === 'Requested') {
                                $('td.location-status[rel="'+result.id+'"]').text('Requested');
                            }
                        } else {
                            alert(result);
                        }
                    },
                    errors: function (result) {
                        alert(result);
                    }
                });
            });
        });
    </script>
{% endblock %}

{% block admincontent %}
    <form action="{{ path('fenchy_admin_location') }}" method="post" {{ form_enctype(filter) }}>
        {{ form_widget(filter) }}
        <br/>
        <input type="submit" value="Search"/>
    </form>
    <table class="admin-table">
        <thead>
            <tr><th>ID</th><th>User Id</th><th>User Name</th><th>Status</th><th>Created At</th></tr>
        </thead>
        <tbody>
        {% if locations %}
           {% for location in locations %}
                <tr>
                    <td>#{{ location.id }}</td>
                    <td>{{ location.user.id }}</td>
                    <td>{{ location.username }}</td>
                    <td class="location-status switch" rel="{{location.id}}" id="status">{{ location.status }}</td>
                    <td>{{ location.createdAt|date('Y-m-d H:i') }}</td>
                 </tr>
           {% endfor %}
         {% endif %}
        </tbody>
    </table>
{% endblock %}
    