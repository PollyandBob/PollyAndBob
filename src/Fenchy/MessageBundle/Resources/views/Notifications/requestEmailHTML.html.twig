<html>
    <body style="font-family: MYRIADPRO-REGULAR, sans-serif;">
        <table style="border: 1px #000 solid; width: 100%; border-collapse: collapse;">
            <tr style="
                height: 61px;
                background-color: #000000;
                border: 3px #000000 solid;
                background-image: -moz-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(1,1,1,0.1) 100%); /* FF3.6+ */
                background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,0)), color-stop(100%,rgba(1,1,1,0.1))); /* Chrome,Safari4+ */
                background-image: -webkit-linear-gradient(top, rgba(255,255,255,0) 0%,rgba(1,1,1,0.1) 100%); /* Chrome10+,Safari5.1+ */
                background-image: -o-linear-gradient(top, rgba(255,255,255,0) 0%,rgba(1,1,1,0.1) 100%); /* Opera 11.10+ */
                background-image: -ms-linear-gradient(top, rgba(255,255,255,0) 0%,rgba(1,1,1,0.1) 100%); /* IE10+ */
                background-image: linear-gradient(to top, rgba(1,1,1,0.1) 0%, rgba(255,255,255,0) 100%); /* W3C */    
                filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#1affffff', endColorstr='#1a010101',GradientType=0 );
                ">
				<td style="padding: 12px 0 5px 20px">
                <img src="{{absolute(asset('images/logo.png'))}}" height="94px" alt="Polly&Bob" />
				</td>
            </tr>
            <tr style="
                border: 3px #000 solid;
                border-top: none;
                ">
				<td style="padding: 20px;">
                                   
                                    <table style="border: 0; width: 100%; border-collapse: collapse;">
                                        <tr>
                                            <td style="padding-left: 30px">
						<p style="font-weight: bold">{{message.title}}</p>
                                                {% set msgcontent =  message.content%}
                                                    {% set link = msgcontent|split('|') %}
                                                          {% if '|' in msgcontent %}
                                                                <p class="message-all">{{ link[0]|nl2br }}<br><br><a style="color:#51B9D4;" href="{{ absolute(link[1]) }}">{{'regularuser.click_here'|trans }}</a><br><br>{{ link[2]|nl2br }}</p>
                                                          {% else %}
                                                                <p class="message-all">{{ msgcontent|nl2br }}</p>
                                                          {% endif %}
                                                          <p>{{'regularuser.message.message_last_part'|trans}}</p>
                                                          <p>{{'request.request_msg_part1'|trans}}</p>
                                                          
                                            </td>
                                        </tr>
                                    </table>
				</td>
            </tr>
        </table>
    </body>
</html>