	                    	<div {% if message.read %}class="message-read"{% endif %}>
	                            <div class="profilei">
                                        {% if message.sender.id == app.user.id %}
                                            {% render "FenchyNoticeBundle:GlobalFilter:generateCode" with { 'userId': message.receiver.id } %}
