{% extends 'FenchyRegularUserBundle::layoutV2.html.twig' %}
{% block stylesheets %}
    {{parent()}}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
	<script type="text/javascript">
    	$(document).ready(function(){
	
    		$("div[id^='showInformationForm']").hide();
    		$("div[id^='collapseminus']").hide();
    	});
		function showInformationForm(id)
		{
	   		var i=0;
	   		for(i=1; i<=9; i++)
	  		{
	       		if(i!=id)        	
	       			$('#showInformationForm'+i).hide();

	       		$('#collapseminus'+i).hide();
	       		$('#collapseplus'+i).show();
		    }    	
		    
			var a = $('#showInformationForm'+id).css('display');
			if(a == 'block')
			{			
				$('#showInformationForm'+id).hide();
				$('#collapseminus'+id).hide();
				$('#collapseplus'+id).show();
			}			
			else
			{	
				$('#showInformationForm'+id).show();
				$('#collapseminus'+id).show();
				$('#collapseplus'+id).hide();
			}
		}  
    
</script>
{% endblock %}
       
{% block content %}
	{% if locale == 'de'%}
        {% include 'FenchyFrontendBundle:Frontend/Foot:aboutandimprint-de.html.twig' %}
    {% elseif locale == 'en' %}
    	{% include 'FenchyFrontendBundle:Frontend/Foot:aboutandimprint-en.html.twig' %}
	{% endif %}
{% endblock %}